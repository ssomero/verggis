{
  "extends": "airbnb/base",
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "no-console": "off",
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "no-else-return": "off",
    "no-restricted-syntax": "off",
    "no-param-reassign": ["error", { "props": false }]
  }
}
